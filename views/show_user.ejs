<!DOCTYPE html>
<html>
  <head>
    <title>Show User</title>
  </head>
  <body>
    <h1><%= user.username %></h1>
    <div>
      <h2>Blog posts:</h2>
      <form method="get" action="/users/<%=user.id%>/posts/new">
        <input type="submit" value="Write New Post">
      </form>
      <% posts.forEach(function(post) { %>
        <h3><%= post.title %></h3><br>
        <p><%= post.body %> </p><br><br><br>
      <%  }); %>
    </div>
  </body>
</html>